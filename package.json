{
  "name": "pos-system",
  "version": "1.0.4",
  "private": true,
  "main": "electron.js",
  "author": "HtetLinPaing",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build:web": "vite build",
    "build": "electron-builder",
    "dist": "npm run build:web && electron-builder",
    "server": "node src/server.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.honex.pos",
    "productName": "POS System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "HtetLinPaing",
        "repo": "honex-pos-final"
      }
    ]
  },
  "dependencies": {
    "axios-debug-log": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "firebase": "^12.3.0",
    "framer-motion": "^12.23.12",
    "localforage": "^1.10.0",
    "lucide-react": "^0.543.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.3"
  }
}
